<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDialogBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/open_dialog_box"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDirectDialogBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnDialogBox"
            android:layout_centerHorizontal="true"
            android:text="@string/open_direct_dialog_box"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBottomSheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnDirectDialogBox"
            android:layout_centerHorizontal="true"
            android:text="@string/open_bottom_sheet"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDirectBottomSheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnBottomSheet"
            android:layout_centerHorizontal="true"
            android:text="@string/open_direct_bottom_sheet"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="17sp" />

    </RelativeLayout>
</RelativeLayout>